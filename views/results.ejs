<%- include('partials/header') %>

<div class="bg-white shadow-md rounded-lg p-8">
  <h2 class="text-2xl font-bold mb-6 text-center">Search Results</h2>
  <% if (flights && flights.length > 0) { %>
    <div class="space-y-4">
      <% flights.forEach(flight => { %>
        <div class="border border-gray-200 p-4 rounded-lg flex justify-between items-center">
          <div>
            <p class="font-bold text-lg"><%= flight.from %> to <%= flight.to %></p>
            <p class="text-gray-600">Date: <%= new Date(flight.date).toLocaleDateString() %></p>
            <p class="text-gray-600">Price: $<%= flight.price %></p>
            <p class="text-sm text-green-600">Carbon Emissions: <%= flight.carbon_emissions %> kg</p>
          </div>
          <a href="/<%= flight._id %>" class="bg-green-500 text-white font-bold py-2 px-4 rounded hover:bg-green-700">View Details</a>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-center text-gray-500">No flights found for your search criteria.</p>
  <% } %>
</div>

<%- include('partials/footer') %>