<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GreenFlight - Voyagez avec Royal Air Maroc</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>

<body class="bg-gray-50 text-gray-800">

  <header class="bg-white shadow-md" x-data="{ open: false }">
    <nav class="container mx-auto px-6 py-4">
      <div class="flex justify-between items-center">
        <a href="/" class="text-green-600 hover:text-green-700">
          <%- include('logo') %>
        </a>

        <!-- Hamburger Menu for Mobile -->
        <div class="md:hidden">
          <button @click="open = !open" class="text-gray-600 focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Desktop Menu -->
        <div class="hidden md:flex items-center space-x-6">
          <a href="/" class="text-gray-600 hover:text-green-600 font-medium">Accueil</a>
          <a href="/flights" class="text-gray-600 hover:text-green-600 font-medium">Vols</a>
          <a href="/users/leaderboard" class="text-gray-600 hover:text-green-600 font-medium">Classement</a>

          <% if (typeof userId !== 'undefined' && userId) { %>
            <a href="/users/dashboard" class="bg-green-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-green-700">Mon Tableau de Bord</a>
            <a href="/users/logout" class="text-gray-600 hover:text-green-600 font-medium">Déconnexion</a>
          <% } else { %>
            <a href="/users/login" class="text-gray-600 hover:text-green-600 font-medium">Connexion</a>
            <a href="/users/register" class="bg-blue-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-600">S'inscrire</a>
          <% } %>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div x-show="open" @click.away="open = false" class="md:hidden mt-4 space-y-2">
        <a href="/" class="block px-4 py-2 text-gray-600 hover:bg-gray-100 rounded">Accueil</a>
        <a href="/flights" class="block px-4 py-2 text-gray-600 hover:bg-gray-100 rounded">Vols</a>
        <a href="/users/leaderboard" class="block px-4 py-2 text-gray-600 hover:bg-gray-100 rounded">Classement</a>
        <hr>
        <% if (typeof userId !== 'undefined' && userId) { %>
          <a href="/users/dashboard" class="block px-4 py-2 text-gray-600 hover:bg-gray-100 rounded">Mon Tableau de Bord</a>
          <a href="/users/logout" class="block px-4 py-2 text-gray-600 hover:bg-gray-100 rounded">Déconnexion</a>
        <% } else { %>
          <a href="/users/login" class="block px-4 py-2 text-gray-600 hover:bg-gray-100 rounded">Connexion</a>
          <a href="/users/register" class="block px-4 py-2 bg-blue-500 text-white font-bold rounded hover:bg-blue-600">S'inscrire</a>
        <% } %>
      </div>
    </nav>
  </header>

  <!-- Flash Messages -->
  <div class="container mx-auto px-4 mt-4">
      <% if (typeof messages !== 'undefined' && Object.keys(messages).length > 0) { %>
          <% Object.keys(messages).forEach(function(key) { %>
              <% const style = {
                  success: 'bg-green-100 border-green-400 text-green-700',
                  error: 'bg-red-100 border-red-400 text-red-700',
                  info: 'bg-blue-100 border-blue-400 text-blue-700'
              }[key] || 'bg-gray-100 border-gray-400 text-gray-700'; %>
              <% messages[key].forEach(function(message) { %>
                  <div class="border px-4 py-3 rounded relative my-2 <%= style %>" role="alert">
                      <span class="block sm:inline"><%= message %></span>
                  </div>
              <% }) %>
          <% }) %>
      <% } %>
  </div>

  <main class="container mx-auto p-4">
