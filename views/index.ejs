<%- include('partials/header') %>

<div class="bg-gray-50">

    <!-- Hero Section -->
    <div class="relative text-white" style="height: 60vh;">
        <img src="https://images.unsplash.com/photo-1542362567-b07e54358753?q=80&w=2070&auto=format&fit=crop" alt="Winding road through a forest" class="absolute w-full h-full object-cover">
        <div class="absolute inset-0 bg-black opacity-50"></div>
        <div class="relative container mx-auto px-4 h-full flex flex-col justify-center items-center text-center">
            <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-4">Travel Sustainably with <span class="text-green-400">Royal Air Maroc</span></h1>
            <p class="text-lg md:text-xl text-gray-200 mb-8 max-w-2xl">Find the best flights, earn green points, and reduce your carbon footprint. Your journey to a greener planet starts here.</p>
            <a href="/flights" class="bg-green-600 text-white font-bold py-3 px-8 rounded-lg text-lg hover:bg-green-700 transition-transform transform hover:scale-105">Book Your Flight Now</a>
        </div>
    </div>

    <!-- Services Section -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold text-gray-800 mb-2">Our Services</h2>
            <p class="text-gray-600 mb-12">Everything you need for a seamless and responsible travel experience.</p>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                <!-- Service 1: Flight Search -->
                <div class="flex flex-col items-center">
                    <div class="bg-green-100 text-green-600 rounded-full p-6 mb-4">
                        <i class="fas fa-plane-departure fa-3x"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Efficient Flight Search</h3>
                    <p class="text-gray-600">Easily find and compare Royal Air Maroc flights. Our intuitive platform helps you book the perfect trip in minutes.</p>
                </div>
                <!-- Service 2: Green Points -->
                <div class="flex flex-col items-center">
                    <div class="bg-blue-100 text-blue-600 rounded-full p-6 mb-4">
                        <i class="fas fa-leaf fa-3x"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Earn Green Points</h3>
                    <p class="text-gray-600">Get rewarded for making sustainable choices. Earn points on every booking and unlock exclusive benefits and badges.</p>
                </div>
                <!-- Service 3: Carbon Tracking -->
                <div class="flex flex-col items-center">
                    <div class="bg-yellow-100 text-yellow-600 rounded-full p-6 mb-4">
                        <i class="fas fa-seedling fa-3x"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Track Your Impact</h3>
                    <p class="text-gray-600">Monitor the carbon footprint of your travels. We provide transparent data to help you make informed, eco-friendly decisions.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Destinations Section -->
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-gray-800 text-center mb-12">Explore Popular Destinations</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Destination 1: Marrakech -->
                <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
                    <img src="https://images.unsplash.com/photo-1559938539-a96b42385c70?q=80&w=1964&auto=format&fit=crop" alt="Marrakech" class="w-full h-56 object-cover">
                    <div class="p-6">
                        <h3 class="text-2xl font-bold text-gray-800">Marrakech</h3>
                    </div>
                </div>
                <!-- Destination 2: Casablanca -->
                <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
                    <img src="https://images.unsplash.com/photo-1552694436-d4f1f5dca3c6?q=80&w=1887&auto=format&fit=crop" alt="Casablanca" class="w-full h-56 object-cover">
                    <div class="p-6">
                        <h3 class="text-2xl font-bold text-gray-800">Casablanca</h3>
                    </div>
                </div>
                <!-- Destination 3: Dakhla -->
                <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
                    <img src="https://images.unsplash.com/photo-1616152423989-d417983c2717?q=80&w=1887&auto=format&fit=crop" alt="Dakhla" class="w-full h-56 object-cover">
                    <div class="p-6">
                        <h3 class="text-2xl font-bold text-gray-800">Dakhla</h3>
                    </div>
                </div>
                <!-- Destination 4: Ifrane -->
                <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
                    <img src="https://images.unsplash.com/photo-1605822124036-a5b353a3c914?q=80&w=1935&auto=format&fit=crop" alt="Ifrane" class="w-full h-56 object-cover">
                    <div class="p-6">
                        <h3 class="text-2xl font-bold text-gray-800">Ifrane</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

<%- include('partials/footer') %>
